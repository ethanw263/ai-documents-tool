{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "framework": "create-react-app",
    "buildCommand": "cd frontend && npm ci && npm run build",
    "outputDirectory": "frontend/build",
    "functions": {
      "api/**.py": {
        "runtime": "python3.12"
      }
    },
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/api/index.py" },
        { "source": "/(.*)", "destination": "/" }
      ]
      
  }
  